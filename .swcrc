{
  "$schema": "https://json.schemastore.org/swcrc",
  "jsc": {
    "parser": {
      "syntax": "typescript"
    },
    "loose": true,
    "target": "es2022",
    "baseUrl": "./src",
    "keepClassNames": true,
    "paths": {
      "@data/*": [
        "data/*"
      ],
      "@infra/*": [
        "infra/*"
      ],
      "@utils/*": [
        "utils/*"
      ],
      "@domain/*": [
        "domain/*"
      ]
    }
  },
  "module": {
    "type": "commonjs",
    "strict": true
  }
}